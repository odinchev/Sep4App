<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context="com.example.examples.sep4app.project.ProjectActivity">


    <ImageView
        android:id="@+id/project_image"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/text_project_name"
        android:text="Project Name"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_below="@id/project_image"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_skills_label"
        android:text="Required knowledge: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_skills"
        android:text="C#, Firebase"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_name"
        android:layout_toEndOf="@id/text_project_skills_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_exp_label"
        android:text="Required experience: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_exp"
        android:text="3 years"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_skills"
        android:layout_toEndOf="@id/text_project_exp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_otherReqs_label"
        android:text="Other requirements: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_otherReqs"
        android:text="Be able to drink 1L of vodka in 1 min"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_exp"
        android:layout_toEndOf="@id/text_project_otherReqs_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_duration_label"
        android:text="Expected duration: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_otherReqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_duration"
        android:text="5 months"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_otherReqs"
        android:layout_toEndOf="@id/text_project_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_summary_label"
        android:text="Summary: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/text_project_summary"
        android:text="This project is about creating a database of crazy vodka drinkers"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@id/text_project_duration_label"
        android:layout_toEndOf="@id/text_project_summary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_contactProject"
        android:text="Contact"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_project_summary"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

</ScrollView>
