<?xml version="1.0" encoding="utf-8"?>



        <RelativeLayout
        android:id="@+id/layout_devInList"
        android:padding="10dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"/>

        <TextView
        android:layout_below="@id/profile_image"
        android:id="@+id/text_name"
        android:textColor="#000"
        android:text="FirstName + LastName"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/text_proficient_in_label"
        android:textColor="#000"
        android:layout_below="@id/text_name"
        android:text="Proficient in: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/text_skills"
        android:text="Java, C# (tags)"
        android:textColor="#000"
        android:layout_below="@id/text_name"
        android:layout_toEndOf="@id/text_proficient_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/text_experience_label"
        android:text="Years of Experience: "
        android:textColor="#000"
        android:layout_below="@id/text_proficient_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/text_yearsOfExp"
        android:text="4 years"
        android:textColor="#000"
        android:layout_below="@id/text_proficient_in_label"
        android:layout_toEndOf="@id/text_experience_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/text_certs_label"
        android:text="Certifications: "
        android:textColor="#000"
        android:layout_below="@id/text_experience_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/text_certificates"
        android:text="CompTIA A+, Network+, Security+, Linux+"
        android:textColor="#000"
        android:layout_below="@id/text_experience_label"
        android:layout_toEndOf="@id/text_certs_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/text_interest_label"
        android:text="Interested in: "
        android:textColor="#000"
        android:layout_below="@id/text_certs_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/text_interestedIn"
        android:text="Network security"
        android:textColor="#000"
        android:layout_below="@id/text_certs_label"
        android:layout_toEndOf="@id/text_interest_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        </RelativeLayout>






